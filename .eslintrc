{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "chrome": true
    },
    "rules": {

        "no-mixed-spaces-and-tabs": 2,

        "indent":[2, 4, {
            "SwitchCase": 1
        }],

        "eqeqeq": 2,

        "strict":[2, "global"],

        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],

        "no-var":2
    }
}
